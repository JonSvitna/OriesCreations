# Environment Variables Template
# Copy this file to .env and fill in your values

# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3000

# Database connection string (for PostgreSQL in production)
DATABASE_URL=postgresql://user:password@localhost:5432/oriescreations

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Session secret for authentication
SESSION_SECRET=your-secret-key-here

# Stripe Payment Integration (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Payment Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
# PAYPAL_MODE=live (for production)

# Wix Integration (for product sync)
WIX_SITE_ID=your_wix_site_id
WIX_API_KEY=your_wix_api_key
WIX_ACCOUNT_ID=your_wix_account_id
# Wix pulls updates from GitHub repository automatically

# Mailchimp Integration (for newsletter/marketing)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1
# Server prefix from your API key (e.g., us1, us2, etc.)
MAILCHIMP_AUDIENCE_ID=your_audience_list_id

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
